{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:css": "tailwindcss -m -i app/styles/app.css -o app/styles/app.output.css",
		"build:remix": "remix build",
		"dev": "run-p dev:*",
		"dev:css": "tailwindcss -w -i app/styles/app.css -o app/styles/app.output.css",
		"dev:remix": "remix dev",
		"start": "remix-serve build",
		"cz": "cz",
		"husky": "husky install",
		"format": "prettier --ignore-path .gitignore -w \"./**/*.{js,jsx,ts,tsx,html,css,json}\"",
		"lint": "eslint --ignore-path .gitignore --fix --ext .ts,.tsx,.js,.jsx .",
		"ci:lint": "eslint --ignore-path .gitignore --max-warnings 0 --ext .ts,.tsx,.js,.jsx .",
		"ci:typecheck": "tsc",
		"prisma:generate": "prisma generate",
		"prisma:push": "prisma db push",
		"prisma:studio": "prisma studio",
		"prisma:migrate": "prisma migrate dev",
		"prisma:deploy": "prisma migrate deploy"
	},
	"lint-staged": {
		"*.{md,json,html}": [
			"prettier --write"
		],
		"*.{ts?(x),js}": [
			"eslint --fix --max-warnings 0"
		],
		"package.json": "sort-package-json"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"dependencies": {
		"@prisma/client": "^4.1.1",
		"@remix-run/node": "^1.6.5",
		"@remix-run/react": "^1.6.5",
		"@remix-run/serve": "^1.6.5",
		"envsafe": "^2.0.3",
		"nodemailer": "^6.7.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@commitlint/cz-commitlint": "^17.0.3",
		"@remix-run/dev": "^1.6.5",
		"@tailwindcss/forms": "^0.5.2",
		"@tsconfig/strictest": "^1.0.1",
		"@types/nodemailer": "^6.4.4",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.30.6",
		"autoprefixer": "^10.4.7",
		"commitizen": "^4.2.5",
		"eslint": "^8.20.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.2.7",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-unicorn": "^43.0.1",
		"husky": "^8.0.1",
		"inquirer": "8.2.4",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"prettier": "^2.7.1",
		"prettier-plugin-tailwindcss": "^0.1.12",
		"prisma": "^4.1.1",
		"sort-package-json": "^1.57.0",
		"tailwindcss": "^3.1.6",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": "^16",
		"pnpm": "^7"
	}
}
